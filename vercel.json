{
  "version": 2,
  "buildCommand": "cd client/snapgaurd && npm run build",
  "outputDirectory": "client/snapgaurd/dist",
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/snapgaurd/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/snapgaurd/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 