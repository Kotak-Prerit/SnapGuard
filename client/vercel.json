{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://snapgaurd.onrender.com/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "VITE_SUPABASE_URL": "$VITE_SUPABASE_URL",
      "VITE_SUPABASE_ANON_KEY": "$VITE_SUPABASE_ANON_KEY",
      "VITE_GROQ_API": "$VITE_GROQ_API"
    }
  }
}
